#!/bin/bash

. ./env





ifconfig


X=1
INSTANCE_COUNT=5

addnode_generator "0" "$DEFAULT_BITCOIN_CONTAINER_INSTANCE_COUNT"
echo "ADDNODE_TEXT='${ADDNODE_TEXT}'"

while [[ $X -le $DEFAULT_BITCOIN_CONTAINER_INSTANCE_COUNT ]]
do
  ADDNODE_TEXT=
  addnode_generator "$X" "$DEFAULT_BITCOIN_CONTAINER_INSTANCE_COUNT"
  
  echo "ADDNODE_TEXT='${ADDNODE_TEXT}'"
  let X=$((X + 1))
done

