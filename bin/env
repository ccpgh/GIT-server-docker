
# build
DOCKER_FILE=src/main/docker/Dockerfile
BUILD_DIR=build

# general
TAG_ORG=shlibnet
TAG_ID=bitcoin-server
TAG_VERSION=latest
TAG_PREFIX="$TAG_ORG/$TAG_ID"
TAG="$TAG_PREFIX:$TAG_VERSION"

# git user
SERVER_DOCKER_GITUSER=ccrepo

# http ports
HTTP_INTERNAL_PORT=8080
HTTP_EXTERNAL_PORT=${HTTP_INTERNAL_PORT}

# ssh ports
SSH_INTERNAL_PORT=22
SSH_EXTERNAL_PORT=${SSH_INTERNAL_PORT}${SSH_INTERNAL_PORT}

# bitcoin ports
BITCOIN_INTERNAL_PORT=18444
BITCOIN_EXTERNAL_PORT=${BITCOIN_INTERNAL_PORT}
BITCOIN_EXTERNAL_PORT_BUILD=18000

# git version
SERVER_DOCKER_BITCOIN_VERSION=
#v27.0

# network
DOCKER_NETWORK_NAME="blocknet"
DOCKER_NETWORK_PARENT="enp0s1"
DOCKER_NETWORK_BASE_IP="10.0.0."
DOCKER_NETWORK_BASE_HOST="0"
DOCKER_NETWORK_START_HOST="200"
DOCKER_NETWORK_START_RANGE="192"
DOCKER_NETWORK_SUBSET_RANGE="24"
DOCKER_NETWORK_RANGE_RANGE="27"
DOCKER_NETWORK_ROUTER_HOST="1"
DOCKER_NETWORK_AUX_HOST="223"

DOCKER_NETWORK_SUBSET_IP="${DOCKER_NETWORK_BASE_IP}${DOCKER_NETWORK_BASE_HOST}"
DOCKER_NETWORK_START_IP="${DOCKER_NETWORK_BASE_IP}${DOCKER_NETWORK_START_HOST}"
DOCKER_NETWORK_SUBSET="${DOCKER_NETWORK_SUBSET_IP}/${DOCKER_NETWORK_SUBSET_RANGE}"
DOCKER_NETWORK_ROUTER="${DOCKER_NETWORK_BASE_IP}${DOCKER_NETWORK_ROUTER_HOST}"
DOCKER_NETWORK_RANGE_IP="${DOCKER_NETWORK_BASE_IP}${DOCKER_NETWORK_START_RANGE}/${DOCKER_NETWORK_RANGE_RANGE}"
DOCKER_NETWORK_AUX_IP="${DOCKER_NETWORK_BASE_IP}${DOCKER_NETWORK_AUX_HOST}"

# bitcoin server setup
DEFAULT_BITCOIN_CONTAINER_INSTANCE_COUNT=2
DEFAULT_BITCOIN_CONTAINER_REMOVE=Y

# bitcoin server
BITCOIN_BINDIR=/usr/local/bin
BITCOIN_EXENAME=bitcoind
BITCOIN_PARAMS=-regtest

